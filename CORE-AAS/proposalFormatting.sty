\usepackage[toc,page]{appendix}
\usepackage{tikz}  % tikz for NOTANONschedule.tex
\usetikzlibrary{shapes.multipart,arrows.meta, positioning, fit, shapes.misc,tikzmark,overlay-beamer-styles,bending} 
% Set the page margins (for proposals):
\usepackage[top=1.0in, left=1in, right=1in, bottom=1.0in]{geometry} % Set the page margins
\newcolumntype{M}[1]{>{\begin{varwidth}[t]{#1}}l<{\end{varwidth}}} % allow for wrapping long text strings inside a cell within a table
\definecolor{mediumelectricblue}{rgb}{0.01, 0.31, 0.59}
\definecolor{WatermarkColor}{HTML}{8887AD} \pagestyle{fancy} \fancyhf{} \fancyfoot[C]{\thepage} % place a line at the top with title to the right and the program name to the left
% make the section titles appear in color to stand out
%\titleformat{\section}{\centering\color{NavyBlue}\normalfont\large\bfseries}{\thesection}{1em}{}
%\titleformat{\subsection}{\centering\color{NavyBlue}\normalfont\large\itshape}{\thesubsection}{1em}{}
%\titleformat{\subsubsection}{\centering\color{NavyBlue}\normalfont\normalsize}{\thesubsubsection}{1em}{}
\interfootnotelinepenalty=10000 \crefformat{footnote}{#2\footnotemark[#1]#3}
\setlength\parindent{0pt} % suppress new paragraph indentation
\raggedbottom % put any extra white space appearing on a page at the bottom of the page
\newtcolorbox{callout}[4][] {colback=#3!5!white,colframe=#3!75!black,fonttitle=\bfseries,title={#4},#2,}
\makeatletter \def\expinput#1{\@@input#1} \makeatother % needed when a partial table (without the top part) is inserted by \input
\setcitestyle{square} \setcitestyle{citesep={,}} % make the references appear as "blah blah blah [1,3] instead of (1;3)
\setlength\cftparskip{2pt} \setlength\cftbeforesecskip{2pt} \setlength\cftaftertoctitleskip{2pt} % Controls the spacing between lines in the Table of Contents
\captionsetup[table]{font={stretch=1}}     %% change 1.2 as you like
\captionsetup[figure]{font={stretch=1}}    %% change 1.2 as you like
\parskip =12pt plus 1pt minus 2pt % Set up the spacing between paragraphs.  The first number below is the  preferred spacing, and the plus 1pt minus 2pt is the amount of flexibility given to the code to make the best use of the available space
\newcommand{\nosection}[1]{\refstepcounter{section}\markright{#1}} % generate a section that increments the section number counter but does not put a number by the section label nor lists the "fake" section in the table of contents.

